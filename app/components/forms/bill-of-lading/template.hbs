<div class="header row space-between">
  <div class="col infoContainer">
    <span class="row baseline">
      <span class="title">{{title}}:</span>
      <span class="number">{{model.orderNumber}}</span>
    </span>

    <span class="date">{{date}}</span>
    <span class="col">
      <span class="company">{{model.location.company.name}}</span>
      <span class="location">{{model.location.code}} - {{model.location.name}}</span>
    </span>
  </div>
  <div>
    {{ui/icon-button
      class="edit"
      icon="edit"
      size="1.5"
      color=white
      flat=true
      backgroundColor=colors.HOT_PINK
      disabled=isEditing
      onClick=(toggle "isEditing" this)}}
  </div>
</div>

<div class="rowContainer">
  {{#each validOrderitems as |orderItem index|}}
    {{rows/cost-quantity-row
        index=index
        isEditing=isEditing
        model=orderItem}}
  {{/each}}
</div>

{{rows/total-row
    class="freightLineItem"
    label="Freight"
    value=model.shipping}}

{{rows/total-row
    label="Total"
    value=total}}

{{#if isEditing}}
  {{ui/icon-button
    class="check"
    icon="check"
    label="Save Changes"
    size="1.5"
    color=white
    flat=true
    backgroundColor=colors.SKY_BLUE
    onClick=(toggle "isEditing" this)}}
{{/if}}
